@using MiniCrm.Web.Models;
@model MiniCrm.Web.Models.MyRegisterViewModelForEmployee
@{
    ViewBag.Title = "RegisterEmployee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("RegisterEmployee", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
