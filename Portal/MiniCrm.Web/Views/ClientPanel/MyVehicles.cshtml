@HttpContext.Current.User.Identity.Name
@{
    ViewBag.Title = "MyVehicles";
    Layout = "~/Views/Shared/_LayoutClientPanel.cshtml";
}
<link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />
<link href="~/Scripts/jtable/themes/lightcolor/gray/jtable.css" rel="stylesheet" />

<script src="~/Scripts/jquery-2.1.3.js"></script>
<script src="~/Scripts/jquery-ui-1.9.2.min.js"></script>
<script src="~/Scripts/jtable/jquery.jtable.js"></script>
<h2>Moje Pojazdy</h2>

<div style="margin-top:15px">
    <div id="VehicleTableContainer"></div>
</div>
<script src="~/Scripts/jtable/localization/jquery.jtable.pl.js"></script>
<script>
    var usrName = "@HttpContext.Current.User.Identity.Name";
</script>
<script>

    $(document).ready(function () {
        $('#VehicleTableContainer').jtable({
            title: 'Lista Pojazdów',
            paging: true, //Enable paging
            sorting: true, //Enable sorting
            defaultSorting: 'Name ASC',

            //openChildAsAccordion: true, //Enable this line to show child tabes as accordion style
            actions: {
                listAction: '/Vehicle/ShowVehicleList?',
                // deleteAction: '/Demo/DeleteVehicle',
                // updateAction: '/Demo/UpdateVehicle',
            },
            fields: {

 
                VehicleID: {
                    title: 'Nr Rejstracyjny',
                    width: '10%',
                    type: 'text',
                    dispaly: false,
                    edit: true,
                    create: true

                },

                Make: {
                    title: 'Producent',
                    width: '10%'

                },
                Model: {
                    title: 'Model',
                    width: '10%'

                },
                FuelType: {
                    title: 'Typ paliwa',
                    width: '10%'
                },
                DateOfManufacture: {
                    title: 'Data produkcji',
                    width: '15%',
                    type: 'date',
                    displayFormat: 'yy-mm-dd'
                },
   

                

            }
        });

        //Load Vehicle list from server
        $('#VehicleTableContainer').jtable('load');

    });
</script>


